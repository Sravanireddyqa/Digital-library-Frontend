<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_card_border">

    <!-- Library Name -->
    <TextView
        android:id="@+id/tvLibraryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library Name"
        android:textColor="#1F2937"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <!-- Address Row with Location Icon and Distance -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_location"
            app:tint="#6B7280"/>

        <TextView
            android:id="@+id/tvLibraryAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Address"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:maxLines="2"/>
    </LinearLayout>

    <!-- Hours Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_calendar"
            app:tint="#6B7280"/>

        <TextView
            android:id="@+id/tvHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Mon-Sat: 9:00 AM - 8:00 PM"
            android:textColor="#6B7280"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Availability Badge -->
    <TextView
        android:id="@+id/tvAvailableCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_badge_green"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:text="âœ“ 5 available"
        android:textColor="#059669"
        android:textSize="12sp"/>
</LinearLayout>
