<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:paddingTop="12dp">

    <TextView
        android:id="@+id/tvActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New reservation request"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvActivityTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 minutes ago"
        android:textColor="#9CA3AF"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/tvActivityDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tvActivityTime"
        android:text="Description"
        android:textColor="#6B7280"
        android:textSize="12sp"
        android:layout_below="@id/tvActivityTitle"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F4F6"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
