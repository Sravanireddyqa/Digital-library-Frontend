<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Book"
                android:textColor="#1F2937"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                android:contentDescription="Close"
                app:tint="#9CA3AF"/>
        </RelativeLayout>

        <!-- Book Cover Image Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:padding="16dp"
            android:background="@drawable/bg_edittext_rounded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Cover Image"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <ImageView
                android:id="@+id/ivBookCover"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:background="#F3F4F6"
                android:contentDescription="Book cover preview"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnSelectCoverImage"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:text="Select Cover Image"
                android:textColor="#3B82F6"
                android:background="@drawable/bg_button_outline"
                android:paddingHorizontal="16dp"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tvImageFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Row 1: Book Title & Author -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book Title"
                    android:textColor="#374151"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/etBookTitle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext_rounded"
                    android:hint="Enter book title"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:inputType="text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author"
                    android:textColor="#374151"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/etAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext_rounded"
                    android:hint="Enter author name"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:inputType="textPersonName"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: ISBN & Category -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISBN"
                    android:textColor="#374151"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/etISBN"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext_rounded"
                    android:hint="978-0-..."
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:inputType="text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textColor="#374151"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_spinner_rounded"
                    android:paddingHorizontal="12dp"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 3: Price & Stock -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="#374151"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/etPrice"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext_rounded"
                    android:hint="$15.00"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:inputType="numberDecimal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Copies"
                    android:textColor="#374151"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/etStock"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext_rounded"
                    android:hint="10"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:inputType="number"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 4: Publisher & Published Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publisher"
                    android:textColor="#374151"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/etPublisher"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext_rounded"
                    android:hint="Publisher name"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:inputType="text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Published Date"
                    android:textColor="#374151"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/etPublishedDate"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext_rounded"
                    android:hint="dd/mm/yyyy"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_calendar"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 5: Pages -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pages"
                android:textColor="#374151"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/etPages"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext_rounded"
                android:hint="324"
                android:textColorHint="#9CA3AF"
                android:textColor="#1F2937"
                android:textSize="14sp"
                android:paddingHorizontal="12dp"
                android:inputType="number"/>
        </LinearLayout>

        <!-- Row 6: Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#374151"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_edittext_rounded"
                android:hint="Enter book description"
                android:textColorHint="#9CA3AF"
                android:textColor="#1F2937"
                android:textSize="14sp"
                android:padding="12dp"
                android:inputType="textMultiLine"
                android:gravity="top"/>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Cancel"
                android:textColor="#6B7280"
                android:background="@drawable/bg_button_outline"
                android:paddingHorizontal="24dp"
                android:layout_marginEnd="12dp"/>

            <Button
                android:id="@+id/btnSaveBook"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Save Book"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_primary"
                android:paddingHorizontal="24dp"/>
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
