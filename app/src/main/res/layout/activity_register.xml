<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_purple_pink">

    <!-- Register Card -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fillViewport="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create Account"
                    android:textSize="22sp"
                    android:textColor="#1F2937"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"/>

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Join our library and discover\namazing books with AI"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginTop="4dp"/>

                <!-- Reader: Name Field (visible for readers only) -->
                <LinearLayout
                    android:id="@+id/layoutName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textSize="14sp"
                        android:textColor="#374151"
                        android:layout_marginTop="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_input_field"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_person"
                            android:contentDescription="Name icon"/>

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:background="@null"
                            android:hint="John Doe"
                            android:textColorHint="#9CA3AF"
                            android:textColor="#1F2937"
                            android:textSize="14sp"
                            android:inputType="textPersonName"
                            android:singleLine="true"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Admin: Library Name (visible for admins only) -->
                <LinearLayout
                    android:id="@+id/layoutLibraryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Library Name"
                        android:textSize="14sp"
                        android:textColor="#374151"
                        android:layout_marginTop="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_input_field"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_library_book"
                            android:contentDescription="Library icon"/>

                        <EditText
                            android:id="@+id/etLibraryName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:background="@null"
                            android:hint="City Central Library"
                            android:textColorHint="#9CA3AF"
                            android:textColor="#1F2937"
                            android:textSize="14sp"
                            android:inputType="text"
                            android:singleLine="true"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Admin: Library Location (visible for admins only) -->
                <LinearLayout
                    android:id="@+id/layoutLibraryLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Library Location"
                        android:textSize="14sp"
                        android:textColor="#374151"
                        android:layout_marginTop="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_input_field"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location"
                            android:contentDescription="Location icon"/>

                        <EditText
                            android:id="@+id/etLibraryLocation"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:background="@null"
                            android:hint="123 Main Street, City"
                            android:textColorHint="#9CA3AF"
                            android:textColor="#1F2937"
                            android:textSize="14sp"
                            android:inputType="text"
                            android:singleLine="true"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Email Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginTop="10dp"/>

                <!-- Email Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_input_field"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_email"
                        android:contentDescription="Email icon"/>

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:background="@null"
                        android:hint="your@email.com"
                        android:textColorHint="#9CA3AF"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:autofillHints="emailAddress"
                        android:importantForAutofill="yes"/>

                </LinearLayout>

                <!-- Password Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginTop="10dp"/>

                <!-- Password Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_input_field"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lock"
                        android:contentDescription="Password icon"/>

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:background="@null"
                        android:hint="••••••••"
                        android:textColorHint="#9CA3AF"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:autofillHints="password"
                        android:importantForAutofill="yes"/>

                    <ImageView
                        android:id="@+id/ivPasswordToggle"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_visibility_off"
                        android:contentDescription="Toggle password visibility"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

                <!-- Confirm Password Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginTop="10dp"/>

                <!-- Confirm Password Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_input_field"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lock"
                        android:contentDescription="Confirm Password icon"/>

                    <EditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:background="@null"
                        android:hint="••••••••"
                        android:textColorHint="#9CA3AF"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:inputType="textPassword"
                        android:singleLine="true"/>

                </LinearLayout>

                <!-- Sign Up Button -->
                <TextView
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_button_login"
                    android:text="Sign Up"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- Progress Bar (hidden by default) -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:indeterminateTint="#7C3AED"/>

                <!-- Login Link -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account? "
                        android:textSize="14sp"
                        android:textColor="#6B7280"/>

                    <TextView
                        android:id="@+id/tvLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:textSize="14sp"
                        android:textColor="#7C3AED"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</FrameLayout>
